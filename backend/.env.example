# Server
PORT=5000
NODE_ENV=development

# MongoDB
MONGO_URI=mongodb+srv://<username>:<password>@cluster0.xxxxx.mongodb.net/agro-ai-health?retryWrites=true&w=majority

# JWT
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRE=30d

# Cloudinary (Image Storage — legacy)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# AWS S3 (Image Storage — recommended)
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here
AWS_REGION=ap-south-1
AWS_S3_BUCKET=agro-ai-health-images

# Storage Provider: "s3" or "cloudinary"
IMAGE_STORAGE=cloudinary

# Python (for AI model inference)
PYTHON_PATH=python

# Frontend URLs (CORS)
CLIENT_URL=http://localhost:5173
